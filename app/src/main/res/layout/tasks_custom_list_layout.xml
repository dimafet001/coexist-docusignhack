<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">


    <CheckBox
        android:id="@+id/list_item_task_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/list_item_task_name"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/list_item_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="26dp"
        android:layout_toRightOf="@id/list_item_task_done"
        android:paddingLeft="8dp"
        android:text="Pay Rent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/list_item_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingLeft="8dp"
        android:text="Today"
        android:layout_alignBaseline="@id/list_item_task_name"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/list_item_task_name"
        tools:layout_editor_absoluteX="155dp" />


    <TextView
        android:id="@+id/list_item_task_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_task_name"
        android:layout_alignLeft="@id/list_item_task_name"
        android:paddingLeft="8dp"
        android:text="Dima"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/list_item_task_name"
        tools:layout_editor_absoluteX="44dp" />

</RelativeLayout>